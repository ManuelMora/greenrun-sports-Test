{
  "name": "greenrun-sports",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && export DEBUG=greenrun-sports:* && node ./build/server",
    "dev": "nodemon --watch src -e ts,js --exec npm run start",
    "test:file": "mocha --timeout 10000 --require ts-node/register",
    "test:only": "npm run test:file -- 'test/**/*.spec.ts'",
    "test": "npm run lint && npm run test:only",
    "coverage": "nyc _mocha --timeout 10000 --require ts-node/register 'test/**/*.spec.ts'",
    "coverage:report": "nyc report --reporter=lcov --reporter=text",
    "coverage:web": "npm run coverage && serve coverage/",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "debug": "^4.3.4",
    "express": "^4.18.1",
    "knex": "^2.1.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/nock": "^11.1.0",
    "@types/node": "^17.0.41",
    "@types/sinon": "^10.0.11",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "mocha": "^10.0.0",
    "nock": "^13.2.6",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "ts-node": "^10.8.1",
    "tslint": "^6.1.3",
    "typescript": "^4.7.3"
  }
}
